<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="dashboard">
    <div class="sidebar">
      <h2>Admin Dashboard</h2>
      <ul>
        <li><a href="/admin">Dashboard</a></li>
        <li><a href="/admin/properties">Properties</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/transactions">Transactions</a></li>
        <li><a href="/admin/analytics">Analytics</a></li>
        <li><a href="/admin/settings" class="active">Settings</a></li>
      </ul>
    </div>

    <div class="main-content">
      <div class="header">
        <h1>Settings</h1>
        <div class="user-info">
          <span>Welcome, <%= user ? user.name : 'Admin' %></span>
          <button onclick="logout()">Logout</button>
        </div>
      </div>

      <div class="form-container">
        <h2>Create New Admin</h2>
        <form id="create-admin-form" onsubmit="createAdmin(event)">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>

          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required>

          <button type="submit">Create Admin</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function logout() {
      console.log("Logout clicked");
      window.location.href = '/logout';
    }

    function createAdmin(event) {
      event.preventDefault(); // Prevent default form submission

      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;

      fetch('/admin/create-admin', { // Your Express route
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ name, email, password })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Admin created successfully!');
          // Optionally clear the form
          document.getElementById('create-admin-form').reset();
        } else {
          alert('Error creating admin: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred.');
      });
    }
  </script>
</body>
</html>