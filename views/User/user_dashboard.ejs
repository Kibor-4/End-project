<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../Public/stylesheet/userdash.css">
    <title>User Dashboard</title>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="h_container">
            <img src="/images/Black Gold Elegant Simple Real Estate Logo (1).png" width="100" height="100" class="logo" alt="Destro Logo">
            <nav class="navbar">
                <ul class="navbar-list">
                    <li><a href="/" class="navbar-link">Home</a></li>
                    <li><a href="/dashboard" class="navbar-link active">Dashboard</a></li>
                    <li><a href="/addproperty" class="navbar-link">Upload</a></li>
                    <li><a href="/login" class="btn btn-fill">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Dashboard Content -->
    <div class="dashboard-container">
        <h1>Welcome to Your Dashboard, <%= user.name %></h1>
        <div class="dashboard-stats">
            <div class="stat-card">
                <h3>Total Properties</h3>
                <p><%= stats.totalProperties %></p>
            </div>
            <div class="stat-card">
                <h3>Total Views</h3>
                <p><%= stats.totalViews %></p>
            </div>
            <div class="stat-card">
                <h3>Total Reviews</h3>
                <p><%= stats.totalReviews %></p>
            </div>
        </div>

        <!-- Properties List -->
        <h2>Your Properties</h2>
        <div class="properties-list">
            <% properties.forEach(property => { %>
                <div class="property-card">
                    <img src="<%= property.image %>" alt="Property Image" class="property-image">
                    <div class="property-details">
                        <h3><%= property.title %></h3>
                        <p><strong>Location:</strong> <%= property.location %></p>
                        <p><strong>Price:</strong> $<%= property.price %></p>
                        <p><strong>Views:</strong> <%= property.views %></p>
                        <p><strong>Reviews:</strong> <%= property.reviews.length %></p>
                        <div class="reviews">
                            <h4>Recent Reviews</h4>
                            <ul>
                                <% property.reviews.forEach(review => { %>
                                    <li>"<%= review.comment %>" - <%= review.user %></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2023 Real Estate Management System. All rights reserved.</p>
    </footer>
</body>
</html>